{
  "name": "@lilnas/cli",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.18.2",
  "prettier": "@lilnas/prettier",
  "type": "module",
  "bin": {
    "lilnas": "./bin/run.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "oclif": {
    "bin": "lilnas",
    "dirname": "lilnas",
    "commands": "./dist/commands",
    "topicSeparator": " ",
    "additionalHelpFlags": [
      "-h"
    ]
  },
  "scripts": {
    "build": "tsc -p . && tsc-alias -p tsconfig.json",
    "dev": "./bin/dev.js",
    "clean": "rm -rf dist/ .turbo/",
    "lint": "run-p -l 'lint:!(fix)'",
    "lint:eslint": "eslint src",
    "lint:prettier": "prettier -c src",
    "lint:fix": "run-p -l lint:*:fix",
    "lint:eslint:fix": "eslint --fix src",
    "lint:prettier:fix": "prettier -w src",
    "type-check": "tsc --noEmit",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:cov": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage"
  },
  "dependencies": {
    "@oclif/core": "^4.8.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.16"
  }
}
